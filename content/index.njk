---js
const eleventyNavigation = {
	key: "Home",
	order: 1
};

const numberOfLatestPostsToShow = 6;
---

{% set postsCount = collections.posts | length %}

<div class="mx-auto w-full max-w-4xl p-8">
  <h1
    class="bg-rainbow mb-12 w-fit bg-clip-text text-5xl font-black tracking-tighter text-transparent"
  >
    Latest Posts
  </h1>

  {% set postslist = collections.posts | head(-1 * numberOfLatestPostsToShow) %}
  {% set postslistCounter = postsCount %}
  {% include "postslist.njk" %}

  <a
    class="after:bg-rainbow hover:bg-rainbow relative bg-clip-text text-2xl font-bold text-blue-500 after:absolute after:-bottom-2 after:left-0 after:h-1 after:w-full after:scale-x-0 after:transition hover:text-transparent hover:after:scale-x-100 dark:text-blue-400"
    href="blog.njk"
    >See all posts â†’</a
  >
</div>
