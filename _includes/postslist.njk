<ol
  class="grid gap-8 mb-12 grid-rows-[repeat(,auto)] grid-cols-[repeat(auto-fit,minmax(min(100%,theme(spacing.80)),1fr))]"
  reversed
>
  {%- for post in postslist | reverse %}
    <li
      class="bg-gray-200 group p-6 shadow-md dark:bg-gray-900 hover:dark:bg-gray-700 transition hover:bg-gray-300 rounded-md grid grid-rows-subgrid row-span-4 gap-0"
    >
      <h3 class="text-4xl font-black mb-6">
        <a
          class="bg-clip-text group-hover:text-transparent group-hover:bg-rainbow"
          href="{{ post.url }}"
          >{{ post.data.title }}</a
        >
      </h3>
      <p class="text-sm mb-4">
        <time datetime="{{ post.date | htmlDateString }}"
          >{{ post.date | readableDate("LLLL yyyy") }}</time
        >
      </p>
      <p class="text-lg leading-relaxed mb-8">{{ post.data.description }}</p>
    </li>
  {%- endfor %}
</ol>
