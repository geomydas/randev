---
layout: layouts/base.njk
---

<article class="prose dark:prose-invert mx-auto w-full max-w-prose p-8">
  <h1>{{ title }}</h1>

  <ul class="not-prose flex flex-wrap gap-4 ">
    <li class="hover:bg-rainbow rounded-md bg-gray-300 text-sm px-4 py-2 font-bold dark:bg-gray-800">
      <time datetime="{{ page.date | htmlDateString }}"
        >{{ page.date | readableDate }}</time
      >
    </li>
    {%- for tag in tags | filterTagList %}
      {%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
      <li
        class="hover:bg-rainbow rounded-md bg-gray-300 px-4 py-2 text-sm font-bold dark:bg-gray-800"
      >
        <a href="{{ tagUrl }}">{{ tag }}</a>{%- if not loop.last %}{% endif %}
      </li>
    {%- endfor %}
  </ul>

  {{ content | safe }}

  {%- if collections.posts %}
    {%- set previousPost = collections.posts | getPreviousCollectionItem %}
    {%- set nextPost = collections.posts | getNextCollectionItem %}
    {%- if nextPost or previousPost %}
      <ul>
        {%- if previousPost %}
          <li>
            ← Previous
            <a href="{{ previousPost.url }}">{{ previousPost.data.title }}</a>
          </li>
        {% endif %}
        {%- if nextPost %}
          <li>Next →<a href="{{ nextPost.url }}">{{ nextPost.data.title }}</a></li>
        {% endif %}
      </ul>
    {%- endif %}
  {%- endif %}
</article>
