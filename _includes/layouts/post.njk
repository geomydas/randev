---
layout: layouts/base.njk
---

<article class="mx-auto prose dark:prose-invert  w-full max-w-prose p-8">
  <h1>{{ title }}</h1>

  <ul class="flex flex-wrap  not-prose divide-x-2 ">
    <li class="">
      <time datetime="{{ page.date | htmlDateString }}"
        >{{ page.date | readableDate }}</time
      >
    </li>
    {%- for tag in tags | filterTagList %}
      {%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
      <li class="pl-2">
        <a class="post-tag" href="{{ tagUrl }}">{{ tag }}</a
        >{%- if not loop.last %},{% endif %}
      </li>
    {%- endfor %}
  </ul>

  {{ content | safe }}

  {%- if collections.posts %}
    {%- set previousPost = collections.posts | getPreviousCollectionItem %}
    {%- set nextPost = collections.posts | getNextCollectionItem %}
    {%- if nextPost or previousPost %}
      <ul>
        {%- if previousPost %}
          <li>
            ← Previous
            <a href="{{ previousPost.url }}">{{ previousPost.data.title }}</a>
          </li>
        {% endif %}
        {%- if nextPost %}
          <li>Next →<a href="{{ nextPost.url }}">{{ nextPost.data.title }}</a></li>
        {% endif %}
      </ul>
    {%- endif %}
  {%- endif %}
</article>
